<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.carental.controller.PaymentDialogController"
      spacing="10" padding="20">
    
    <Label text="Payment Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <GridPane vgap="10" hgap="10">
        <Label text="Booking ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="bookingIdLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Car:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="carLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="amountLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Payment Method:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="paymentMethodComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>
    
    <VBox fx:id="cardDetailsBox" spacing="10" visible="false">
        <TextField fx:id="cardNumberField" promptText="Card Number"/>
        <HBox spacing="10">
            <TextField fx:id="expiryDateField" promptText="MM/YY" HBox.hgrow="NEVER"/>
            <TextField fx:id="cvvField" promptText="CVV" HBox.hgrow="NEVER"/>
        </HBox>
    </VBox>
    
    <VBox fx:id="upiDetailsBox" spacing="10" visible="false">
        <TextField fx:id="upiIdField" promptText="UPI ID"/>
    </VBox>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button text="Pay" onAction="#handlePay" defaultButton="true"/>
    </HBox>
    
</VBox> 